@model LoginViewModel
@{
	ViewData["Title"] = "Register";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<form asp-action="Login" asp-controller="Account">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label>User Name</label>
							<input asp-for="UserName" class="form-control" />
							<!--asp-for chỉ ra trường được gọi trong ProductModel-->
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" />
							<!--asp-for chỉ ra trường được gọi trong ProductModel-->
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						<div class="form-group">
							<button class="btn btn-primary">Login</button>
							<a asp-action="Create" asp-controller="Account">Register</a>
						</div>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}